<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculteur de calories"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:textSize="35sp"
        android:background="#8E24AA"
        android:textColor="@color/white"
        android:gravity="center"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Saisir votre poids en Kg ..."
        android:gravity="center"
        android:textSize="25sp"
        android:background="#FDD835"
        android:inputType="number"
        android:layout_margin="5dp"
        android:id="@+id/kg"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Saisir votre agee en annee ..."
        android:gravity="center"
        android:textSize="25sp"
        android:background="#FDD835"
        android:inputType="number"
        android:layout_margin="5dp"
        android:id="@+id/ans"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Saisir votre taille en m ..."
        android:gravity="center"
        android:textSize="25sp"
        android:background="#FDD835"
        android:inputType="number"
        android:layout_margin="5dp"
        android:id="@+id/m"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sexe"
        android:layout_margin="5dp"
        android:textSize="35sp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/sexe">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Homme"
            android:textSize="25sp"
            android:checked="true"
            android:id="@+id/H"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Femme"
            android:textSize="25sp"
            android:id="@+id/F"/>
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Niveau d'activite"
        android:layout_margin="5dp"
        android:textSize="35sp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/niveau">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="profil sedentaire"
            android:textSize="25sp"
            android:checked="true"
            android:id="@+id/sed"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profil legerenent"
            android:textSize="25sp"
            android:id="@+id/leg"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profil actif"
            android:textSize="25sp"
            android:id="@+id/actif"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profil tres actif"
            android:textSize="25sp"
            android:id="@+id/tres"/>
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculer"
            android:textSize="25sp"
            android:layout_marginTop="40px"
            android:textColor="@color/white"
            android:background="#3949AB"
            android:id="@+id/btn1"
            android:layout_margin="5dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Initialiser"
            android:textSize="25sp"
            android:layout_marginTop="40px"
            android:textColor="@color/white"
            android:background="#3949AB"
            android:id="@+id/btn2"
            android:layout_margin="5dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/res"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"/>

</LinearLayout>